<%= simple_form_for @activity, html: {class: 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :title %>
  <%= f.association :author, collection: User.all.map{|u| [u.nickname, u.id]} %>
  <%= f.input :description, input_html: {class: 'span6', size: '500x10'}, hint: t('common.markdown') %>
  <%= f.input :status, collection: Activity::STATUS.map{|k, v| [v, k]} %>
  <%= f.input :start_at, as: :string, input_html: { value: @activity.start_at } %>
  <%= f.input :summary, input_html: {class: 'span6', size: '500x10'}, hint: t('common.markdown') %>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
