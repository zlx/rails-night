<h2>编辑个人资料</h2>

<hr/>

<%= simple_form_for @user, html:{ class: 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <%= f.input :email, controls_html: {class: 'col-md-3'} %>
  <%= f.input :nickname, controls_html: {class: 'col-md-3'} %>
  <%= f.input :avatar_url, hint: t('common.avatar_url'), controls_html: {class: 'col-md-3'} %>


  <%= f.input :password , controls_html: {class: 'col-md-3'}%>
  <%= f.input :password_confirmation, controls_html: {class: 'col-md-3'} %>
  <%= f.input :current_password, required: true, hint: '你必须输入原密码来确认修改', controls_html: {class: 'col-md-3'} %>

  <div class='form-group'>
    <div class='col-lg-offset-2 col-lg-2'>
      <%= f.button :submit, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
